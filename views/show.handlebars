<h1 class="my-2 text-center restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-6 mx-auto mt-4">
      <p class="mb-1">
        <span class="badge bg-danger font-weight-normal">
          {{restaurant.rating}}
          <i class="fas fa-star fa-xs"></i>
        </span>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>
      <p class="mb-5">
        {{restaurant.description}}
      </p>
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
      <div class="d-flex justify-content-end">
        <a type="button" class="btn btn-secondary m-2" href="/restaurants/{{restaurant._id}}/edit" role="button"
          style="text-decoration:none">Edit</a>
        <a type="button" class="btn btn-secondary my-2" href="/" role="button" style="text-decoration:none">back</a>
      </div>
    </div>
  </div>
</div>