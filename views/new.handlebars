<div class="card border mx-auto my-2" style="width: 40rem;">
  <form action="/restaurants" class="m-2" method="post">
    <div class="mb-3">
      <label for="name" class="form-label fw-bolder">Name</label>
      <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="mb-3">
      <label for="category" class="form-label fw-bolder">Category</label>
      <input type="text" class="form-control" id="category" name="category">
    </div>
    <div class="mb-3">
      <label for="image" class="form-label fw-bolder">Image</label>
      <input type="text" class="form-control" id="image" name="image">
    </div>
    <div class="mb-3">
      <label for="location" class="form-label fw-bolder">Location</label>
      <input type="text" class="form-control" id="location" name="location">
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label fw-bolder">Phone</label>
      <input type="text" class="form-control" id="phone" name="phone">
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label fw-bolder">Google Map</label>
      <input type="text" class="form-control" id="google_map" name="google_map">
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label fw-bolder">Rating</label>
      <input type="number" class="form-control" id="image" name="rating" min="1.0" max="5.0"
        step="0.1">
    </div>
    <div class="mb-3">
      <label for="description" class="form-label fw-bolder">Description</label>
      <textarea type="text" class="form-control" id="description"
        name="description"></textarea>
    </div>
    <div class="d-flex justify-content-end">
      <button type="submit" class="btn btn-secondary y-2" role="button">Add</button>
    </div>
  </form>
</div>