<div class="card border mx-auto my-2" style="width: 40rem;">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" class="m-2" method="post">
    <div class="mb-3">
      <label for="name" class="form-labe fw-bolderl">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="{{restaurant.name}}">
    </div>
    <div class="mb-3">
      <label for="category" class="form-label fw-bolder">Category</label>
      <input type="text" class="form-control" id="category" name="category" value="{{restaurant.category}}">
    </div>
    <div class="mb-3">
      <label for="image" class="form-label fw-bolder">Image</label>
      <input type="text" class="form-control" id="image" name="image" value="{{restaurant.image}}">
    </div>
    <div class="mb-3">
      <label for="location" class="form-label fw-bolder">Location</label>
      <input type="text" class="form-control" id="location" name="location" value="{{restaurant.location}}">
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label fw-bolder">Phone</label>
      <input type="text" class="form-control" id="phone" name="phone" value="{{restaurant.phone}}">
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label fw-bolder">Google Map</label>
      <input type="text" class="form-control" id="google_map" name="google_map" value="{{restaurant.google_map}}">
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label fw-bolder">Rating</label>
      <input type="number" class="form-control" id="image" name="rating" value={{restaurant.rating}} min="1.0" max="5.0"
        step="0.1">
    </div>
    <div class="mb-3">
      <label for="description" class="form-label fw-bolder">Description</label>
      <textarea type="text" class="form-control" id="description"
        name="description">{{restaurant.description}}</textarea>
    </div>
    <div class="d-flex justify-content-end">
      <a type="button" class="btn btn-secondary my-2" href="/" role="button" style="text-decoration:none">back</a>
      <button type="submit" class="btn btn-secondary  m-2" role="button">Save</button>
    </div>
  </form>
</div>